{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS"
  },
  "deploy": {
          "startCommand": "npx prisma db push --accept-data-loss && npx prisma generate && npm run railway:fix && (npm run update-promotion || echo 'Promotion update failed, continuing...') && npm start",
    "healthcheckPath": "/api/health",
    "healthcheckTimeout": 300,
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  },
  "environments": {
    "production": {
      "variables": {
        "NODE_ENV": "production",
        "DATABASE_URL": "postgresql://postgres:TXnbENPucrNvDdPCwzTdQfVpvPGHdIGY@postgres.railway.internal:5432/railway"
      }
    }
  },
  "volumes": [
    {
      "name": "uploads",
      "mountPath": "/app/public/uploads"
    }
  ]
}
